{
  "watch": [
    "*.js",
    "routes/",
    "controllers/",
    "services/",
    "middleware/",
    "config/"
  ],
  "ext": "js,json",
  "ignore": [
    "node_modules/",
    "tests/",
    "*.test.js",
    "*.spec.js"
  ],
  "delay": 2000,
  "restartable": "rs",
  "env": {
    "NODE_ENV": "development"
  },
  "exec": "node server.js"
}


